<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YAGRougelike.MainPage">

    <Grid BackgroundColor="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="250" />
            <RowDefinition Height="250" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0">
            <BoxView HeightRequest="50" />
            <Label Text="Yet Another Generic" TextColor="WhiteSmoke" FontSize="Default" HorizontalTextAlignment="Center" />
            <Label Text="Rougealike" TextColor="FloralWhite" HorizontalOptions="CenterAndExpand" FontSize="60" />
        </StackLayout>

        <Button x:Name="PlayButton" Text="Play" Grid.Row="1" Clicked="Play" Margin="100" WidthRequest="200" HorizontalOptions="Center" />
    </Grid>
</ContentPage>