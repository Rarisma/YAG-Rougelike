<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YAGRougelike.MainPage">

    <Grid>
        <StackLayout BackgroundColor="#121212">
            <BoxView Color="#121212" HeightRequest="100"/>
            <Label Text="Rougealike" FontSize="50" TextColor="AliceBlue" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label x:Name="Buildstring" Text="Version 0.2.0 Xamarin Beta&#x0a;           Made by Rarisma" FontSize="Small" TextColor="AliceBlue" HorizontalOptions="Center"/>
            <BoxView Color="#121212" HeightRequest="100"/>

            <Button x:Name="PlayButton" Text="Play" Margin="20" Clicked="Play"/>
            <Button Text="Settings" Margin="20" IsEnabled="False"/>
        </StackLayout>
    </Grid>
</ContentPage>
