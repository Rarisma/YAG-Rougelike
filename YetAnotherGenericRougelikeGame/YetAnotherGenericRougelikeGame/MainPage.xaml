<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YetAnotherGenericRougelikeGame.MainPage">

    <Grid>
        <StackLayout BackgroundColor="#444444">
            <BoxView Color="#444" HeightRequest="100"/>
            <Label Text="Rougealike" FontSize="50" TextColor="AliceBlue" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text="Version 0.1.0 Xamarin Alpha&#x0a;           Made by Rarisma" FontSize="Small" TextColor="AliceBlue" HorizontalOptions="Center"/>
            <BoxView Color="#444" HeightRequest="100"/>

            <Button x:Name="PlayButton" Text="Play" Margin="20" Clicked="Play"/>
            <Button Text="Settings" Margin="20" IsEnabled="False"/>

        </StackLayout>
    </Grid>
</ContentPage>
